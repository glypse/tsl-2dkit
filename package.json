{
	"name": "tsl-2dkit",
	"version": "0.3.1",
	"type": "module",
	"description": "TSL-based library for 2D shaders",
	"author": "tsl-2dkit contributors",
	"license": "MPL-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/glypse/tsl-2dkit.git"
	},
	"bugs": {
		"url": "https://github.com/glypse/tsl-2dkit/issues"
	},
	"homepage": "https://glypse.github.io/tsl-2dkit/",
	"files": [
		"dist"
	],
	"main": "./dist/tsl-2dkit.umd.cjs",
	"module": "./dist/tsl-2dkit.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/tsl-2dkit.js",
			"require": "./dist/tsl-2dkit.umd.cjs",
			"types": "./dist/index.d.ts"
		}
	},
	"keywords": [
		"three.js",
		"three",
		"canvas",
		"webgl",
		"webgl2",
		"webgpu",
		"tsl",
		"three.js shading language",
		"texture",
		"generative art",
		"shaders",
		"shader",
		"shader art",
		"creative coding"
	],
	"scripts": {
		"dev": "pnpm --filter docs dev",
		"build": "tsc --project tsconfig-build.json && vite build",
		"preview": "pnpm --filter docs preview",
		"lint": "prettier --check . && eslint . && tsc --noEmit && pnpm -filter docs run check",
		"fix": "eslint . --fix",
		"format": "prettier --write .",
		"prepare": "husky",
		"release": "semantic-release",
		"release:dry": "semantic-release --dry-run",
		"docs": "typedoc"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@commitlint/types": "^20.3.1",
		"@eslint/compat": "^1.4.1",
		"@eslint/css": "^0.14.1",
		"@eslint/js": "^9.39.2",
		"@eslint/json": "^0.14.0",
		"@eslint/markdown": "^7.5.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.2",
		"@semantic-release/npm": "^13.1.3",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@types/node": "^25.0.3",
		"@types/three": "^0.182.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^61.7.1",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"semantic-release": "^25.0.2",
		"typedoc": "^0.28.16",
		"typedoc-plugin-markdown": "^4.9.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.52.0",
		"vite": "npm:rolldown-vite@7.3.0"
	},
	"pnpm": {
		"overrides": {
			"vite": "npm:rolldown-vite@7.3.0"
		}
	},
	"dependencies": {
		"mediabunny": "^1.27.4",
		"three": "^0.182.0"
	}
}
