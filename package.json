{
	"name": "three-tsl-lab",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"description": "TSL-based library for 2D shaders",
	"files": [
		"dist"
	],
	"main": "./dist/three-tsl-lab.umd.cjs",
	"module": "./dist/three-tsl-lab.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/three-tsl-lab.js",
			"require": "./dist/three-tsl-lab.umd.cjs",
			"types": "./dist/index.d.ts"
		}
	},
	"keywords": [
		"three.js",
		"three",
		"canvas",
		"webgl",
		"webgl2",
		"webgpu",
		"tsl",
		"three.js shading language",
		"texture",
		"generative art",
		"shaders",
		"shader",
		"shader art"
	],
	"scripts": {
		"dev": "vite",
		"build": "tsc --project tsconfig-build.json && vite build",
		"preview": "vite preview",
		"lint": "oxlint --type-aware .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@prettier/plugin-oxc": "^0.0.4",
		"@types/node": "^24.9.1",
		"@types/three": "^0.180.0",
		"oxlint": "^1.24.0",
		"oxlint-tsgolint": "^0.3.0",
		"prettier": "^3.6.2",
		"typescript": "~5.9.3",
		"vite": "npm:rolldown-vite@7.1.19"
	},
	"pnpm": {
		"overrides": {
			"vite": "npm:rolldown-vite@7.1.19"
		}
	},
	"dependencies": {
		"three": "^0.180.0"
	}
}
