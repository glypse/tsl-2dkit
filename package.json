{
	"name": "tsl-2dkit",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"description": "TSL-based library for 2D shaders",
	"files": [
		"dist"
	],
	"main": "./dist/tsl-2dkit.umd.cjs",
	"module": "./dist/tsl-2dkit.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/tsl-2dkit.js",
			"require": "./dist/tsl-2dkit.umd.cjs",
			"types": "./dist/index.d.ts"
		}
	},
	"keywords": [
		"three.js",
		"three",
		"canvas",
		"webgl",
		"webgl2",
		"webgpu",
		"tsl",
		"three.js shading language",
		"texture",
		"generative art",
		"shaders",
		"shader",
		"shader art",
		"creative coding"
	],
	"scripts": {
		"dev": "vite",
		"build": "tsc --project tsconfig-build.json && vite build",
		"preview": "vite preview",
		"lint": "prettier --check . ; eslint . ; tsc --noEmit",
		"fix": "eslint . --fix",
		"format": "prettier --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint/css": "^0.14.1",
		"@eslint/js": "^9.39.2",
		"@eslint/json": "^0.14.0",
		"@eslint/markdown": "^7.5.1",
		"@microsoft/tsdoc": "^0.16.0",
		"@types/node": "^25.0.3",
		"@types/three": "^0.182.0",
		"@vitejs/plugin-basic-ssl": "^2.1.3",
		"@yushijinhun/three-minifier-rollup": "^0.4.0",
		"eslint": "^9.39.2",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^61.7.1",
		"eslint-plugin-tsdoc": "^0.5.0",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"prettier": "^3.7.4",
		"prettier-plugin-jsdoc": "^1.8.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.52.0",
		"vite": "npm:rolldown-vite@7.3.0"
	},
	"pnpm": {
		"overrides": {
			"vite": "npm:rolldown-vite@7.3.0"
		}
	},
	"dependencies": {
		"mediabunny": "^1.27.4",
		"three": "^0.182.0"
	}
}
